{
  "apps" : [

    {
      "name"      : "API",
      "script"    : "server/app.js",
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    },
  ],

  "deploy" : {
    "production" : {
      "user" : "node",
      "host" : "scaleway",
      "ref"  : "origin/master",
      "repo" : "https://github.com/Flightan/liste-naissance.git",
      "path" : "/home/deploy/liste-naissance",
      "post-deploy" : "npm install ; bower install ; grunt build ; pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
